.button {
  width: 100%;
  height: 39px;
  display: flex;
  justify-content: center;
  align-items: center;
  border: none;
  border-radius: 8px;
  background-color: var(--color-blue);
  cursor: pointer;

  &:hover {
    opacity: 0.7;
  }

  &:disabled {
    opacity: 0.7;
    cursor: default;
  }

  &__text {
    font-size: 13px;
    font-weight: 500;
    line-height: 1;
    color: var(--color-white);
    margin: 12px 0;
  }
}
