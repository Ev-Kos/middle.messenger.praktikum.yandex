.button {
  width: 100%;
  text-align: center;
  padding: 12px 0;
  border: none;
  border-radius: 8px;
  background-color: var(--color-blue);
  cursor: pointer;

  &:hover {
    opacity: 0.7;
  }

  &__text {
    font-size: 13px;
    font-weight: 500;
    line-height: 1;
    color: var(--color-white);
  }
}