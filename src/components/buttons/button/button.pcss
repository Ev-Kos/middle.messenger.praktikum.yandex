.button {
  width: 100%;
  height: 39px;
  border: none;
  border-radius: 8px;
  padding: 0;
  position: relative;
  background-color: var(--color-blue);
  cursor: pointer;

  &:disabled {
    opacity: 0.7;
  }

  &:hover {
    opacity: 0.7;
  }

  &__text {
    font-size: 13px;
    font-weight: 500;
    line-height: 1;
    color: var(--color-white);
    margin: 12px 0;
  }
}
