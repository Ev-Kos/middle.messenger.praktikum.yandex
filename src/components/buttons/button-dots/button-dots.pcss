.button-dots {
  border: none;
  background-color: inherit;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 3px;
  width: 11px;
  padding:0;
  cursor: pointer;

  &:hover {
    opacity: 0.7;
  }

  &__dot {
    width: 3px;
    height: 3px;
    background-color: var(--color-text);
    border-radius: 50%;
  }
}