.contact-card {
  display: flex;
  justify-content: space-between;
  width: 100%;
  padding: 12px 10px;
  border-top: 1px solid var(--color-grey-border);
  border-bottom: 1px solid var(--color-grey-border);
  box-sizing: border-box;

  &__message-and-photo-wrap {
    display: flex;
    gap: 10px;
  }

  &__message-wrap {
    display: flex;
    flex-direction: column;
    gap: 4px;
    max-width: 193px;
  }

  &__chat-name {
    font-size: 13px;
    font-weight: 600;
  }
}