{
  "extends": ["stylelint-config-standard"],
  "overrides": [
    {
      "files": ["*.ts"],
      "customSyntax": "postcss-lit"
    }
  ],
  "rules": {
    "property-no-vendor-prefix": null,
    "color-hex-length": "short",
    "selector-class-pattern": ["^[a-z]+([_-]{1,2}[a-z]+)*$", { "resolveNestedSelectors": true }
    ]
  },
  "ignoreFiles": ["dist/*"]
}
